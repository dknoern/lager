# MongoDB (for local development - docker-compose overrides this to use service name "mongo")
MONGODB_URI=mongodb://localhost:27017/lager

# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# AvaTax Configuration
AVATAX_USERNAME=your_avatax_username
AVATAX_PASSWORD=your_avatax_password
AVATAX_APP_NAME=myinventory
AVATAX_APP_VERSION=1.0
AVATAX_ENVIRONMENT=sandbox
AVATAX_MACHINE_NAME=ygritte

# Email Addresses (comma-separated)
EMAIL_TO=email1@example.com,email2@example.com
EMAIL_BCC=email3@example.com

# Auth0
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_DOMAIN=your_domain.auth0.com
AUTH0_CALLBACK_URL=http://localhost:8080/app/inventory
AUTH0_AUDIENCE=https://myinventory/api
